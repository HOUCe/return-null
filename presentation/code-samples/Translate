import translate from '../../services/translate';

class Translate extends PureComponent {
  static propTypes = {
    message: PropTypes.string.isRequired,
    source: PropTypes.string.isRequired,
    target: PropTypes.string.isRequired,
  }

  state = {
    translatedMessage: null,
  }

  componentWillReceiveProps({ source, target, message }) {
    // NOTE: snipped some validation business, for brevity.

    // Unset the message on each update, so that we delay
    // rendering the children until the translation is
    // completed.
    this.setState({ translatedMessage: null });

    translate({ source, target, message })
      .then(result => {
        this.setState({ translatedMessage: result });
      });
  }

  render() {
    const { translatedMessage } = this.state;
    const { children } = this.props;

    return translatedMessage
      ? children(translatedMessage)
      : null;
  }
};
