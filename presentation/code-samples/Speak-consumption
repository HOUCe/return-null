class DictationBox extends Component {
  state = { message: '' }

  render() {
    const { message } = this.state;

    return (
      <div>
        <textarea
          placeholder="Add some text here..."
          onChange={ev => (
            this.setState({ message: ev.target.value })
          )}
        />

        <Speak message={message} />
      </div>
    )
  }
}
